<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pass_log_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/event_fragment"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pass_log_state"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/check"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/pass_log_door_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pass_log_state"
                android:text="Номер точки прохода: 4231"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/pass_log_door_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pass_log_door_id"
                android:layout_toRightOf="@id/pass_log_state"
                android:text="Точка прохода: вход в зал тестирования"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/pass_log_place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pass_log_state"
                android:layout_below="@id/pass_log_door_name"
                android:text="Дата транзакции: 25.01.2017 22:35"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/pass_log_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pass_log_state"
                android:layout_below="@id/pass_log_place_name"
                android:text="Комментарий: Ye 'nj lkz ksjdkj askdjsad"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>