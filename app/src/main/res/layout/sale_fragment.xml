<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@drawable/fragment_text"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sale_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID транзакции: 4231"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/sale_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sale_id"
                android:text="Тип транзакци: 1"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/sale_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sale_type"
                android:text="Дата транзакции: 25.01.2017 22:35"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/sale_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sale_time"
                android:text="Комментарий: Ye 'nj lkz ksjdkj askdjsad"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>